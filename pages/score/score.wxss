/* pages/score/score.wxss */
.page {
  background-color: #db9e36;
  background-image: radial-gradient(#FFFFFF44 30%, transparent 0),
                    radial-gradient(#FFFFFF44 30%, transparent 0);
  background-position: 0 0, 10px 10px;
  background-size: 20px 20px;
  padding: 0;
  justify-content: space-around;
}
.panel {
  width: 80vw;
  background: #222222AA;
  text-align: center;
  padding: 10vw 0;
  position: relative;
  border-radius: 20pt;
}
.level {
  /* position: absolute;
  width: 100%;
  top: -10pt; */
}
.score {
  text-align: center;
}
.score .num {
  display: block;
  font-size: 40pt;
}
.score .title {
  font-size: 16pt;
}
.profile .line {
  display: flex;
  justify-content: stretch;
  padding: 2pt;
}
.profile .label {
  width: 50%;
  text-align: right;
  flex-shrink: 0;
}
.profile .value {
  width: 50%;
  text-align: right;
  padding-right: 27vw;
}
.control .btn {
  width: 80vw;
  background: #179B16;
  color: #FFF;
  font-weight: bolder;
}
.control .btn.ghost {
  background: none;
  border: 1px solid #179B16;
  color: #179B16;
}