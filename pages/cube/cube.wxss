/* pages/cube/cube.wxss */
.page {
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  background: #36aaff;
}
.header {
  width: 100vw;
  line-height: 8vw;
  height: 15vw;
  padding: 3vw 10vw;
  box-sizing: border-box;
  position: absolute;
  display: flex;
  justify-content: space-between;
  border: 2px solid #4dffff;
  border-top: none;
  border-radius: 0 0 10px 10px;
  color: #FFF;
  background: rgba(255, 255, 255, 0.3);
}
.header .label {
  text-shadow: 0 0 4px #053b67;
  margin-right: 4px;
}
.header .num {
  text-align: right;
  width: 20vw;
  height: 8vw;
  display: inline-block;
  padding: 0 10px;
  background: #0d7090;
  border-radius: 8px;
}
.header .timer .num {
}
.cubeContainer {
  width: 80vw;
  height: 80vw;
  padding: 2vw;
  border-radius: 2vw;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  margin: auto;
  position: relative;
  background: rgba(128, 128, 128, 0.5);
}
.cubeBox {
  position: absolute;
  transition: transform 1000ms;
}

.startAni {
  position: absolute;
  width: 100%;
  height: 100%;
  color: #FFF;
  font-style: italic;
  text-align: center;
  line-height: 90vh;
}
.startAni .num {
  font-size: 0;
  transition: all 300ms;
  /* display: none; */
}
.startAni.step_0 .num_0,
.startAni.step_1 .num_1,
.startAni.step_2 .num_2,
.startAni.step_3 .num_3 {
  font-size: 30vw;
}
.startAni.step_0 .num_0 {
  font-size: 20vw;
}