/* pages/ranking/ranking.wxss */
.ranking {
  position: fixed;
  width: 100%;
  height: 100%;
  background: #EEE;
  display:flex;
  flex-direction:column;
}
.winners {
  width: 100%;
  height: 100pt;
  background: linear-gradient(#5ED4D5, #38B1AF);
  display: flex;
  flex-shrink:0;
}
.winner {
  width: 100%;
  height: 80pt;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  font-size: 6pt;
  line-height: 2;
  color: #FFF;
  position: relative;
}
.winner:nth-child(odd) {
  justify-content: flex-end;
}
.winner .avatar {
  width: 30pt;
  height: 30pt;
  transform: rotate(-45deg);
}
.winner .avatar-box {
  width: 30pt;
  height: 30pt;
  overflow: hidden;
  transform: rotate(45deg);
}
.winner .index {
  width: 12pt;
  height: 12pt;
  border-radius: 100%;
  text-align: center;
  font-size: 8pt;
  line-height: 12pt;
  background: #FFF;
  font-style: italic;
  color: #000;
  position: relative;
  top: -3pt;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}
.winner .name {
  border-bottom: 1pt solid #EFEFEF;
}
.mine {
  background: #FFF;
  margin-bottom: 4pt;
  flex-shrink:0;
}
.list {
  width: 100%;
  height: 100%;
  background: #FFF;
  overflow-y: scroll;
}
.score {
  display: flex;
  align-items: center;
  padding: 5pt 8pt 5pt 0;
  border-bottom: 1px solid #EEE;
}
.list .score:last-child {
  border: none;
}
.score .index {
  width: 20pt;
  text-align: center;
  flex-shrink: 0;
  font-size: 8pt;
}
.score .avatar {
  width: 20pt;
  height: 20pt;
  margin-right: 10pt;
  border-radius: 100%;
  flex-shrink: 0;
}
.score .info {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.score .info .name {
  font-size: 10pt;
}
.score .info .rank {
  color: #666;
  font-size: 10pt;
}
.score .score {
  color: #EE9B58;
  border: none;
}