.container {
  background-color: #db9e36;
  height: 100%;
  width: 100%;
  position: fixed;
  z-index: 1;
  margin-top: 0px;
  top: 0px;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.m-select {
  margin: 30pt 0;
  padding-top: 24pt;
  height: 52pt;
  overflow: hidden;
  position: relative;
}
.m-select:before,
.m-select:after {
  content: '';
  width: 100%;
  height: 30pt;
  display: block;
  position: absolute;
  top: 0;
  background: linear-gradient(#db9e36, transparent);
  z-index: 10;
}
.m-select:after {
  top: 46pt;
  background: linear-gradient(transparent, #db9e36);
}
.m-option {
  display: block;
  line-height: 28pt;
  color: #666;
  font-size: 16pt;
}
.m-option.active {
  font-size: 26pt;
}
.m-text-select {
  transition: transform 100ms;
}
.line {
}

.line.active {
  color: white;
}

.menu {
  width: 80vw;
  margin: 0 auto;
  box-sizing: border-box;
}

.rank {
  color: #179B16;
  text-align: center;
  font-size: 14px;
}
