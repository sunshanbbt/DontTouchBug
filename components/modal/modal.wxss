/* components/modal/modal.wxss */
.modal {
  width: 80vw;
  height: 80vh;
  position: fixed;
  top: 10vh;
  left: 10vw;
  background: rgba(0, 0, 0, 0.7);
  z-index: 100;
  display: none;
  padding: 10pt;
  box-sizing: border-box;
}
.modal.active {
  display: block;
}
.modal .inner {
  position: relative;
  z-index: 101;
  width: 100%;
  height: 100%;
}
.modal .mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}