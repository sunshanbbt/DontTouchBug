/* components/cube/cube.wxss */
.cube {
  width: 15vw;
  height: 15vw;
}
.cube .inner {
  width: 100%;
  height: 100%;
  background: #a6f333;
  border-radius: 5pt;
  transition: transform 200ms;
  position: absolute;
  top: 0;
  font-size: 12pt;
  line-height: 100%;
}
.cube .inner .bug {
  width: 60%;
  height: 60%;
  margin-top: 20%;
}
.cube .inner.front {
  width: 100%;
  height: 100%;
  background: #EEE;
  transform: rotateY(90deg);
  transition-delay: 200ms;
  text-align: center;
  line-height: 15vw;
}
.cube.active .inner.back {
  transform: rotateY(90deg);
  transition-delay: 200ms;
}
.cube.active .inner.front {
  transform: rotateY(0);
  transition-delay: 0;
}
