/* pages/cube/cube.wxss */
.page {
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  background: linear-gradient(-45deg, #454869, #422251);
  padding: 0;
}
.cubeContainer {
  width: 80vw;
  height: 80vw;
  padding: 2vw;
  border-radius: 2vw;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  margin: auto;
  position: relative;
  background: rgba(128, 128, 128, 0.5);
}
.cubeBox {
  position: absolute;
  transition: transform 1000ms;
}