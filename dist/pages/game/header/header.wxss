.header {
  width: 100vw;
  line-height: 8vw;
  height: 15vw;
  padding: 3vw 5vw;
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  color: #DBDBDB;
}
.header .stepCount,
.header .timer {
  display: flex;
  width: 50%;
}
.header .icon {
  width: 9vw;
  height: 8vw;
}
.header .num {
  text-align: left;
  width: 100%;
  height: 8vw;
  display: inline-block;
  padding: 0 10px;
  border-radius: 8px;
}
.header .timer {
  margin-left: 5pt;
}