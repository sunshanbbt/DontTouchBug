@font-face {
  font-family: "mainUI";
  src: url("https://bug.ty1990.cn/static/wenquanyi.ttf");
}
.container {
  font-family: "mainUI";
}
.page {
  width: 100%;
  height: 100%;
  position: fixed;
  background: #000;
  color: #FFF;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  font-family: "mainUI", 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.btn {
  width: 100%;
  border: none;
  margin: 8pt;
}